<FrameLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_height="match_parent"
android:id="@+id/layout_container">

<ScrollView
    android:id="@+id/listview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="13dp"
        android:background="@color/app_bg"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="14dip"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/selector_grid_item_bg"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="12dp"
                android:textColor="@color/color_principal" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_selector"
                android:id="@+id/spColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Talla"
                android:textSize="12dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/color_principal"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_selector"
                android:id="@+id/spTalla" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESCRIPCIÓN"
                android:textSize="12sp"
                android:layout_marginTop="12dp"
                android:textColor="@color/color_principal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:textSize="11sp"
                android:id="@+id/txtNombre" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPOSICIÓN"
                android:textSize="12sp"
                android:layout_marginTop="12dp"
                android:textColor="@color/color_principal"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/myTable">

            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CUIDADO"
                android:textSize="12sp"
                android:layout_marginTop="12dp"
                android:textColor="@color/color_principal"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/myTable2">

            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="@android:color/black" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar al Carroto"
                android:id="@+id/AddCar"
                android:drawableLeft="@mipmap/ic_action_cart"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>

<FrameLayout
    android:id="@+id/header"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/max_height_header">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/calzedonia" />


    <FrameLayout
        android:id="@+id/header_text_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/min_height_textheader_materiallike"
        android:background="@color/color_principal"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio: $300.000"
            android:textSize="12dp"
            android:paddingRight="15dp"
            android:id="@+id/precio"
            android:textColor="@color/color_blanco"
            android:layout_gravity="right|center_vertical" />


    </FrameLayout>

</FrameLayout>

</FrameLayout>
